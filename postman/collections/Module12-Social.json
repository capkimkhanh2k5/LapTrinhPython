    "item": [
        {
            "name": "12.1 Reviews",
            "item": [
                {
                    "name": "Get Company Reviews",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/companies/:id/reviews?page=1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "companies",
                                ":id",
                                "reviews"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                }
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{company_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Write Review",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 201', () => pm.response.to.have.status(201));",
                                    "var json = pm.response.json();",
                                    "if (json.id) pm.environment.set('review_id', json.id);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"rating\": 4,\n  \"title\": \"Great workplace\",\n  \"pros\": \"Good salary, nice team\",\n  \"cons\": \"Long working hours\",\n  \"is_anonymous\": false\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/companies/:id/reviews",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "companies",
                                ":id",
                                "reviews"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{company_id}}"
                                }
                            ]
                        }
