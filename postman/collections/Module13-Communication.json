{
    "info": {
        "_postman_id": "module13-communication",
        "name": "Module 13: Notifications & Messaging",
        "description": "API Notifications & Messaging - 20 endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{token}}",
                "type": "string"
            }
        ]
    },
    "item": [
        {
            "name": "13.1 Notifications",
            "item": [
                {
                    "name": "List Notifications",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 200', () => pm.response.to.have.status(200));"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/notifications?page=1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "notifications"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Unread Notifications",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/notifications/unread",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "notifications",
                                "unread"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Notification Detail",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "var json = pm.response.json();",
                                    "if (json.id) pm.environment.set('notification_id', json.id);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/notifications/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "notifications",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{notification_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Mark as Read",
                    "request": {
                        "method": "PATCH",
                        "url": {
                            "raw": "{{base_url}}/notifications/:id/read",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "notifications",
                                ":id",
                                "read"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{notification_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Mark All as Read",
                    "request": {
                        "method": "PATCH",
                        "url": {
                            "raw": "{{base_url}}/notifications/read-all",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "notifications",
                                "read-all"
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Notification",
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{base_url}}/notifications/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "notifications",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{notification_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Clear All Notifications",
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{base_url}}/notifications/clear-all",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "notifications",
                                "clear-all"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Notification Settings",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/notifications/settings",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "notifications",
                                "settings"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "13.2 Messages",
            "item": [
                {
                    "name": "List Message Threads",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/messages/threads",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "messages",
                                "threads"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Thread Detail",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "var json = pm.response.json();",
                                    "if (json.id) pm.environment.set('thread_id', json.id);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/messages/threads/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "messages",
                                "threads",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{thread_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Create Thread",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 201', () => pm.response.to.have.status(201));",
                                    "var json = pm.response.json();",
                                    "if (json.id) pm.environment.set('thread_id', json.id);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"participant_ids\": [2, 3],\n  \"subject\": \"New conversation\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/messages/threads",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "messages",
                                "threads"
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Thread",
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{base_url}}/messages/threads/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "messages",
                                "threads",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{thread_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Thread Messages",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/messages/threads/:id/messages?page=1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "messages",
                                "threads",
                                ":id",
                                "messages"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                }
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{thread_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Send Message",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "var json = pm.response.json();",
                                    "if (json.id) pm.environment.set('message_id', json.id);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"content\": \"Hello, this is a test message!\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/messages/threads/:id/messages",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "messages",
                                "threads",
                                ":id",
                                "messages"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{thread_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Message",
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{base_url}}/messages/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "messages",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{message_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Mark Thread as Read",
                    "request": {
                        "method": "PATCH",
                        "url": {
                            "raw": "{{base_url}}/messages/threads/:id/read",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "messages",
                                "threads",
                                ":id",
                                "read"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{thread_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Unread Count",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/messages/unread-count",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "messages",
                                "unread-count"
                            ]
                        }
                    }
                },
                {
                    "name": "Add Participant",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"user_id\": 4\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/messages/threads/:id/participants",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "messages",
                                "threads",
                                ":id",
                                "participants"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{thread_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Remove Participant",
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{base_url}}/messages/threads/:id/participants/:userId",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "messages",
                                "threads",
                                ":id",
                                "participants",
                                ":userId"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{thread_id}}"
                                },
                                {
                                    "key": "userId",
                                    "value": "4"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Upload Attachment",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "multipart/form-data"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "file",
                                    "type": "file",
                                    "src": ""
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/messages/upload-attachment",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "messages",
                                "upload-attachment"
                            ]
                        }
                    }
                }
            ]
        }
    ]
}