{
    "info": {
        "_postman_id": "module14-jobalerts",
        "name": "Module 14: Job Alerts",
        "description": "API Job Alerts - 8 endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{token}}",
                "type": "string"
            }
        ]
    },
    "item": [
        {
            "name": "14.1 Job Alerts",
            "item": [
                {
                    "name": "List Job Alerts",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 200', () => pm.response.to.have.status(200));"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/job-alerts?page=1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "job-alerts"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Create Job Alert",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 201', () => pm.response.to.have.status(201));",
                                    "var json = pm.response.json();",
                                    "if (json.id) pm.environment.set('job_alert_id', json.id);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Senior Developer Jobs\",\n  \"keywords\": \"senior developer python\",\n  \"category_id\": 1,\n  \"job_type\": \"full_time\",\n  \"level\": \"senior\",\n  \"salary_min\": 2000,\n  \"salary_max\": 5000,\n  \"frequency\": \"daily\",\n  \"is_active\": true\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/job-alerts",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "job-alerts"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Job Alert Detail",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/job-alerts/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "job-alerts",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{job_alert_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Update Job Alert",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Updated Alert Name\",\n  \"frequency\": \"weekly\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/job-alerts/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "job-alerts",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{job_alert_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Job Alert",
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{base_url}}/job-alerts/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "job-alerts",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{job_alert_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Toggle Job Alert",
                    "request": {
                        "method": "PATCH",
                        "url": {
                            "raw": "{{base_url}}/job-alerts/:id/toggle",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "job-alerts",
                                ":id",
                                "toggle"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{job_alert_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Test Job Alert Matching",
                    "request": {
                        "method": "POST",
                        "url": {
                            "raw": "{{base_url}}/job-alerts/:id/test",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "job-alerts",
                                ":id",
                                "test"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{job_alert_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Matched Jobs",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/job-alerts/:id/matched-jobs?page=1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "job-alerts",
                                ":id",
                                "matched-jobs"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                }
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{job_alert_id}}"
                                }
                            ]
                        }
                    }
                }
            ]
        }
    ]
}