{
    "info": {
        "_postman_id": "module15-campaigns",
        "name": "Module 15: Recruitment Campaigns",
        "description": "API Recruitment Campaigns - 10 endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{token}}",
                "type": "string"
            }
        ]
    },
    "item": [
        {
            "name": "15.1 Campaigns",
            "item": [
                {
                    "name": "List Campaigns",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 200', () => pm.response.to.have.status(200));"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/campaigns?page=1&status=active",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "campaigns"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "status",
                                    "value": "active",
                                    "disabled": true
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Create Campaign",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 201', () => pm.response.to.have.status(201));",
                                    "var json = pm.response.json();",
                                    "if (json.id) pm.environment.set('campaign_id', json.id);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Q1 2026 Hiring Campaign\",\n  \"description\": \"Mass hiring for tech positions\",\n  \"start_date\": \"2026-01-01\",\n  \"end_date\": \"2026-03-31\",\n  \"budget\": 50000,\n  \"target_applications\": 500\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/campaigns",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "campaigns"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Campaign Detail",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/campaigns/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "campaigns",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{campaign_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Update Campaign",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Updated Campaign Name\",\n  \"budget\": 75000\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/campaigns/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "campaigns",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{campaign_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Campaign",
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{base_url}}/campaigns/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "campaigns",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{campaign_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Update Campaign Status",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"status\": \"active\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/campaigns/:id/status",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "campaigns",
                                ":id",
                                "status"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{campaign_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Campaign Jobs",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/campaigns/:id/jobs",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "campaigns",
                                ":id",
                                "jobs"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{campaign_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Add Job to Campaign",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"job_id\": {{job_id}}\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/campaigns/:id/jobs",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "campaigns",
                                ":id",
                                "jobs"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{campaign_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Remove Job from Campaign",
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{base_url}}/campaigns/:id/jobs/:jobId",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "campaigns",
                                ":id",
                                "jobs",
                                ":jobId"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{campaign_id}}"
                                },
                                {
                                    "key": "jobId",
                                    "value": "{{job_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Campaign Analytics",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/campaigns/:id/analytics",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "campaigns",
                                ":id",
                                "analytics"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{campaign_id}}"
                                }
                            ]
                        }
                    }
                }
            ]
        }
    ]
}