{
    "info": {
        "_postman_id": "module16-referrals",
        "name": "Module 16: Referrals",
        "description": "API Referrals - 15 endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{token}}",
                "type": "string"
            }
        ]
    },
    "item": [
        {
            "name": "16.1 Referral Programs",
            "item": [
                {
                    "name": "List Referral Programs",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 200', () => pm.response.to.have.status(200));"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/referral-programs?page=1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "referral-programs"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Create Referral Program",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 201', () => pm.response.to.have.status(201));",
                                    "var json = pm.response.json();",
                                    "if (json.id) pm.environment.set('referral_program_id', json.id);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Employee Referral Program 2026\",\n  \"description\": \"Refer friends and earn bonus\",\n  \"reward_amount\": 500,\n  \"reward_type\": \"cash\",\n  \"is_active\": true\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/referral-programs",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "referral-programs"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Referral Program Detail",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/referral-programs/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "referral-programs",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{referral_program_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Update Referral Program",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"reward_amount\": 750\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/referral-programs/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "referral-programs",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{referral_program_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Referral Program",
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{base_url}}/referral-programs/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "referral-programs",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{referral_program_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Toggle Referral Program",
                    "request": {
                        "method": "PATCH",
                        "url": {
                            "raw": "{{base_url}}/referral-programs/:id/toggle",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "referral-programs",
                                ":id",
                                "toggle"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{referral_program_id}}"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "16.2 Referrals",
            "item": [
                {
                    "name": "List Referrals",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/referrals?page=1&status=pending",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "referrals"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "status",
                                    "value": "pending",
                                    "disabled": true
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Submit Referral",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 201', () => pm.response.to.have.status(201));",
                                    "var json = pm.response.json();",
                                    "if (json.id) pm.environment.set('referral_id', json.id);",
                                    "pm.test('CV uploaded to Cloudinary', () => {",
                                    "    pm.expect(json.cv_file).to.include('cloudinary');",
                                    "});"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "program_id",
                                    "value": "{{referral_program_id}}",
                                    "type": "text"
                                },
                                {
                                    "key": "job_id",
                                    "value": "{{job_id}}",
                                    "type": "text"
                                },
                                {
                                    "key": "candidate_name",
                                    "value": "John Doe",
                                    "type": "text"
                                },
                                {
                                    "key": "candidate_email",
                                    "value": "john.doe@example.com",
                                    "type": "text"
                                },
                                {
                                    "key": "candidate_phone",
                                    "value": "+84123456789",
                                    "type": "text"
                                },
                                {
                                    "key": "notes",
                                    "value": "Highly recommended candidate",
                                    "type": "text"
                                },
                                {
                                    "key": "cv_file_upload",
                                    "type": "file",
                                    "src": "",
                                    "description": "CV file (PDF, DOC, DOCX). Will be uploaded to Cloudinary."
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/referrals",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "referrals"
                            ]
                        },
                        "description": "Submit a referral with CV file upload. The CV will be stored on Cloudinary and the response will contain a Cloudinary URL in the cv_file field."
                    }
                },
                {
                    "name": "Get Referral Detail",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/referrals/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "referrals",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{referral_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Update Referral",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"notes\": \"Updated notes\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/referrals/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "referrals",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{referral_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Referral",
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{base_url}}/referrals/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "referrals",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{referral_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Update Referral Status",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"status\": \"hired\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/referrals/:id/status",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "referrals",
                                ":id",
                                "status"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{referral_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get My Referrals",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/referrals/my-referrals",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "referrals",
                                "my-referrals"
                            ]
                        }
                    }
                },
                {
                    "name": "Mark Referral as Paid",
                    "request": {
                        "method": "POST",
                        "url": {
                            "raw": "{{base_url}}/referrals/:id/mark-paid",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "referrals",
                                ":id",
                                "mark-paid"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{referral_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Referral Stats",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/referrals/stats",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "referrals",
                                "stats"
                            ]
                        }
                    }
                }
            ]
        }
    ]
}