        {
            "name": "20.2 Reports",
            "item": [
                {
                    "name": "List Reports",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/reports?page=1",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "reports"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Generate Report",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "var json = pm.response.json();",
                                    "if (json.id) pm.environment.set('report_id', json.id);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"type\": \"jobs_summary\",\n  \"filters\": {\n    \"date_from\": \"2026-01-01\",\n    \"date_to\": \"2026-01-31\"\n  },\n  \"format\": \"csv\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/reports/generate",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "reports",
                                "generate"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Report Detail",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/reports/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "reports",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{report_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Report",
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{base_url}}/reports/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "reports",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{report_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Download Report",
                    "request": {
                        "method": "POST",
                        "url": {
                            "raw": "{{base_url}}/reports/:id/download",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "reports",
                                ":id",
                                "download"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{report_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Email Report",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"email\": \"admin@example.com\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/reports/:id/email",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "reports",
                                ":id",
                                "email"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{report_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Scheduled Reports",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/reports/scheduled",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "reports",
                                "scheduled"
                            ]
                        }
                    }
                },
                {
                    "name": "Schedule Report",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"type\": \"monthly_summary\",\n  \"schedule\": \"0 9 1 * *\",\n  \"recipients\": [\"admin@example.com\"]\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/reports/schedule",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "reports",
                                "schedule"
                            ]
                        }
                    }
                }
            ]
        }
