{
    "info": {
        "_postman_id": "module21-system",
        "name": "Module 21: System & Administration",
        "description": "API System & Administration - 18 endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{token}}",
                "type": "string"
            }
        ]
    },
    "item": [
        {
            "name": "21.1 System Settings",
            "item": [
                {
                    "name": "List Settings",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/settings",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "settings"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Setting by Key",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/settings/:key",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "settings",
                                ":key"
                            ],
                            "variable": [
                                {
                                    "key": "key",
                                    "value": "site_name"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Update Setting",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"value\": \"Updated Value\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/settings/:key",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "settings",
                                ":key"
                            ],
                            "variable": [
                                {
                                    "key": "key",
                                    "value": "site_name"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Setting Categories",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/settings/categories",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "settings",
                                "categories"
                            ]
                        }
                    }
                },
                {
                    "name": "Bulk Update Settings",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"settings\": [\n    {\"key\": \"site_name\", \"value\": \"New Name\"},\n    {\"key\": \"maintenance_mode\", \"value\": false}\n  ]\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/settings/bulk-update",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "settings",
                                "bulk-update"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Public Settings",
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/settings/public",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "settings",
                                "public"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "21.2 Activity Logs",
            "item": [
                {
                    "name": "List Activity Logs",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/activity-logs?page=1&limit=20",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "activity-logs"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "20"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Activity Log Detail",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "var json = pm.response.json();",
                                    "if (json.id) pm.environment.set('activity_log_id', json.id);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/activity-logs/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "activity-logs",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{activity_log_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get User Activity Logs",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/users/:id/activity-logs",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "users",
                                ":id",
                                "activity-logs"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{user_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Activity Stats",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/activity-logs/stats",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "activity-logs",
                                "stats"
                            ]
                        }
                    }
                },
                {
                    "name": "Export Activity Logs",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/activity-logs/export?format=csv",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "activity-logs",
                                "export"
                            ],
                            "query": [
                                {
                                    "key": "format",
                                    "value": "csv"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Cleanup Old Logs",
                    "request": {
                        "method": "DELETE",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"older_than_days\": 90\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/activity-logs/cleanup",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "activity-logs",
                                "cleanup"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "21.3 File Uploads",
            "item": [
                {
                    "name": "Upload Image",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "multipart/form-data"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "file",
                                    "type": "file",
                                    "src": ""
                                },
                                {
                                    "key": "folder",
                                    "value": "avatars",
                                    "type": "text"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/upload/image",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "upload",
                                "image"
                            ]
                        }
                    }
                },
                {
                    "name": "Upload Document",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "multipart/form-data"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "file",
                                    "type": "file",
                                    "src": ""
                                },
                                {
                                    "key": "folder",
                                    "value": "documents",
                                    "type": "text"
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/upload/document",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "upload",
                                "document"
                            ]
                        }
                    }
                },
                {
                    "name": "Upload Video",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "multipart/form-data"
                            }
                        ],
                        "body": {
                            "mode": "formdata",
                            "formdata": [
                                {
                                    "key": "file",
                                    "type": "file",
                                    "src": ""
                                }
                            ]
                        },
                        "url": {
                            "raw": "{{base_url}}/upload/video",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "upload",
                                "video"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Upload Info",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "var json = pm.response.json();",
                                    "if (json.id) pm.environment.set('upload_id', json.id);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/uploads/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "uploads",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{upload_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Upload",
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{base_url}}/uploads/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "uploads",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{upload_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get User Uploads",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/uploads/user/:userId",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "uploads",
                                "user",
                                ":userId"
                            ],
                            "variable": [
                                {
                                    "key": "userId",
                                    "value": "{{user_id}}"
                                }
                            ]
                        }
                    }
                }
            ]
        }
    ]
}