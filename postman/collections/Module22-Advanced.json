{
    "info": {
        "_postman_id": "module22-advanced",
        "name": "Module 22: Advanced Features",
        "description": "API Advanced Features - 8 endpoints (Search History: 4, Media Types: 4)",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{token}}",
                "type": "string"
            }
        ]
    },
    "item": [
        {
            "name": "22.1 Job Search History",
            "item": [
                {
                    "name": "Get Search History",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 200', () => pm.response.to.have.status(200));"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/search-history?page=1&limit=20",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "search-history"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "20"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Save Search Query",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 201', () => pm.response.to.have.status(201));",
                                    "var json = pm.response.json();",
                                    "if (json.id) pm.environment.set('search_history_id', json.id);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"query\": \"python developer\",\n  \"filters\": {\n    \"location\": \"Ha Noi\",\n    \"salary_min\": 1500\n  }\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/search-history",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "search-history"
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Search History Item",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 204', () => pm.response.to.have.status(204));"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{base_url}}/search-history/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "search-history",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{search_history_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Clear All Search History",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 204', () => pm.response.to.have.status(204));"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{base_url}}/search-history/clear-all",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "search-history",
                                "clear-all"
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "22.2 Media Types",
            "description": "API quản lý loại media (Admin only for CUD, Public for List)",
            "item": [
                {
                    "name": "List Media Types (Public)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 200', () => pm.response.to.have.status(200));",
                                    "pm.test('Returns array', () => pm.expect(pm.response.json()).to.be.an('array'));"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/media-types/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "media-types",
                                ""
                            ]
                        }
                    }
                },
                {
                    "name": "List Active Media Types",
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/media-types/?is_active=true",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "media-types",
                                ""
                            ],
                            "query": [
                                {
                                    "key": "is_active",
                                    "value": "true"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Create Media Type (Admin)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 201', () => pm.response.to.have.status(201));",
                                    "var json = pm.response.json();",
                                    "if (json.id) pm.environment.set('media_type_id', json.id);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"type_name\": \"Video\",\n  \"description\": \"Video files (mp4, webm, avi)\",\n  \"is_active\": true\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/media-types/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "media-types",
                                ""
                            ]
                        }
                    }
                },
                {
                    "name": "Update Media Type (Admin)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 200', () => pm.response.to.have.status(200));"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"type_name\": \"Video Updated\",\n  \"description\": \"Updated video description\",\n  \"is_active\": true\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/media-types/:id/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "media-types",
                                ":id",
                                ""
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{media_type_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Media Type (Admin)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 204', () => pm.response.to.have.status(204));"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{base_url}}/media-types/:id/",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "media-types",
                                ":id",
                                ""
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{media_type_id}}"
                                }
                            ]
                        }
                    }
                }
            ]
        }
    ]
}