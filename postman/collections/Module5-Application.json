{
    "info": {
        "_postman_id": "module5-application",
        "name": "Module 5: Application Management",
        "description": "API Application Management - 20 endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{token}}",
                "type": "string"
            }
        ]
    },
    "item": [
        {
            "name": "5.1 Applications",
            "item": [
                {
                    "name": "Create Application",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 201', () => pm.response.to.have.status(201));",
                                    "var json = pm.response.json();",
                                    "if (json.id) pm.environment.set('application_id', json.id);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"job_id\": \"{{job_id}}\",\n  \"cv_id\": \"{{cv_id}}\",\n  \"cover_letter\": \"I am excited to apply for this position...\",\n  \"expected_salary\": 3000\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/applications",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "applications"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Application Detail",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/applications/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "applications",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{application_id}}"
                                }
                            ]
                        }
                    }
                },
