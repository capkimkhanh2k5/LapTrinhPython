    "item": [
        {
            "name": "6.1 Interview Scheduling",
            "item": [
                {
                    "name": "Create Interview",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 201', () => pm.response.to.have.status(201));",
                                    "var json = pm.response.json();",
                                    "if (json.id) pm.environment.set('interview_id', json.id);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"application_id\": \"{{application_id}}\",\n  \"interview_type_id\": 1,\n  \"scheduled_at\": \"2026-02-15T10:00:00Z\",\n  \"duration_minutes\": 60,\n  \"location\": \"Conference Room A\",\n  \"notes\": \"Technical interview round\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/interviews",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "interviews"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Interview Detail",
