                                },
                                {
                                    "key": "cvId",
                                    "value": "{{cv_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Update CV Privacy",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"is_public\": true\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/recruiters/:id/cvs/:cvId/privacy",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "recruiters",
                                ":id",
                                "cvs",
                                ":cvId",
                                "privacy"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{recruiter_id}}"
                                },
                                {
                                    "key": "cvId",
                                    "value": "{{cv_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Auto Generate CV",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"template_id\": 1\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/recruiters/:id/cvs/generate",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "recruiters",
                                ":id",
                                "cvs",
                                "generate"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{recruiter_id}}"
                                }
                            ]
                        }
                    }
                }
            ]
        }
    ]
