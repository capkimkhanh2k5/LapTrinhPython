{
    "info": {
        "_postman_id": "module9-address",
        "name": "Module 9: Address Management",
        "description": "API Address Management - 13 endpoints",
        "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
    },
    "auth": {
        "type": "bearer",
        "bearer": [
            {
                "key": "token",
                "value": "{{token}}",
                "type": "string"
            }
        ]
    },
    "item": [
        {
            "name": "9.1 Provinces",
            "item": [
                {
                    "name": "List Provinces",
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/provinces?page=1&limit=50",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "provinces"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "50"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Province Detail",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 200', () => pm.response.to.have.status(200));",
                                    "var json = pm.response.json();",
                                    "if (json.id) pm.environment.set('province_id', json.id);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/provinces/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "provinces",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "1"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Provinces by Region",
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/provinces/by-region/:region",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "provinces",
                                "by-region",
                                ":region"
                            ],
                            "variable": [
                                {
                                    "key": "region",
                                    "value": "north"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Search Provinces",
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/provinces/search?q=Ha Noi",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "provinces",
                                "search"
                            ],
                            "query": [
                                {
                                    "key": "q",
                                    "value": "Ha Noi"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "9.2 Communes",
            "item": [
                {
                    "name": "List Communes by Province",
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/provinces/:id/communes?page=1&limit=50",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "provinces",
                                ":id",
                                "communes"
                            ],
                            "query": [
                                {
                                    "key": "page",
                                    "value": "1"
                                },
                                {
                                    "key": "limit",
                                    "value": "50"
                                }
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{province_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Get Commune Detail",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 200', () => pm.response.to.have.status(200));",
                                    "var json = pm.response.json();",
                                    "if (json.id) pm.environment.set('commune_id', json.id);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "auth": {
                            "type": "noauth"
                        },
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/communes/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "communes",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "1"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Create Commune (Admin)",
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Phường Bách Khoa\",\n  \"province_id\": 1,\n  \"commune_type\": \"ward\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/communes",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "communes"
                            ]
                        }
                    }
                },
                {
                    "name": "Update Commune",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"name\": \"Phường Bách Khoa Updated\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/communes/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "communes",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{commune_id}}"
                                }
                            ]
                        }
                    }
                }
            ]
        },
        {
            "name": "9.3 Addresses",
            "item": [
                {
                    "name": "Create Address",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "type": "text/javascript",
                                "exec": [
                                    "pm.test('Status 201', () => pm.response.to.have.status(201));",
                                    "var json = pm.response.json();",
                                    "if (json.id) pm.environment.set('address_id', json.id);"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"street_address\": \"1 Đại Cồ Việt\",\n  \"commune_id\": 1,\n  \"province_id\": 1,\n  \"postal_code\": \"100000\",\n  \"country\": \"Vietnam\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/addresses",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "addresses"
                            ]
                        }
                    }
                },
                {
                    "name": "Get Address Detail",
                    "request": {
                        "method": "GET",
                        "url": {
                            "raw": "{{base_url}}/addresses/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "addresses",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{address_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Update Address",
                    "request": {
                        "method": "PUT",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"street_address\": \"Updated Street Address\"\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/addresses/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "addresses",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{address_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Delete Address",
                    "request": {
                        "method": "DELETE",
                        "url": {
                            "raw": "{{base_url}}/addresses/:id",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "addresses",
                                ":id"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{address_id}}"
                                }
                            ]
                        }
                    }
                },
                {
                    "name": "Verify Address",
                    "request": {
                        "method": "PATCH",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"is_verified\": true\n}",
                            "options": {
                                "raw": {
                                    "language": "json"
                                }
                            }
                        },
                        "url": {
                            "raw": "{{base_url}}/addresses/:id/verify",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "addresses",
                                ":id",
                                "verify"
                            ],
                            "variable": [
                                {
                                    "key": "id",
                                    "value": "{{address_id}}"
                                }
                            ]
                        }
                    }
                }
            ]
        }
    ]
}